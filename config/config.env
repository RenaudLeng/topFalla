# Environment variables
NODE_ENV=development
PORT=3000

# Database
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=your_postgres_password
DB_NAME=topfalla_db
DB_PORT=5432
DB_DIALECT=postgres
DB_POOL_MAX=5
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# JWT
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=90d
JWT_COOKIE_EXPIRES_IN=90

# Email
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USERNAME=your_mailtrap_username
EMAIL_PASSWORD=your_mailtrap_password
EMAIL_FROM='TopFalla <no-reply@topfalla.com>'

# Frontend URL
FRONTEND_URL=http://localhost:8080

# Rate limiting
RATE_LIMIT_WINDOW_MS=60 * 60 * 1000 // 1 heure
RATE_LIMIT_MAX=100 // 100 requêtes par fenêtre

# CORS
CORS_ORIGIN=http://localhost:8080

# Upload
MAX_FILE_UPLOAD=5 * 1024 * 1024 // 5MB
FILE_UPLOAD_PATH=./public/uploads

# Session
SESSION_SECRET=your_session_secret

# API Keys (à remplacer par vos clés réelles)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Recaptcha
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key
RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# Analytics
GOOGLE_ANALYTICS_ID=your_google_analytics_id
FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# Social Login (à configurer selon les besoins)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Redis (pour la mise en cache et les files d'attente)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Elasticsearch (pour la recherche)
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_LOG_LEVEL=error

# AWS (pour le stockage des fichiers)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=your_aws_region
AWS_BUCKET_NAME=your_aws_bucket_name

# Sentry (pour la gestion des erreurs)
SENTRY_DSN=your_sentry_dsn

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/app.log

# Feature flags
FEATURE_NEW_UI=true
FEATURE_PAYMENT=true
FEATURE_NOTIFICATIONS=true
